{{#if currentCompany.isSignedIn}}
  <nav class="navbar navbar-default navbar-fixed-top" role="navigation">
    <div class="navbar-header">
      <a class="navbar-brand" href="/">FoodMatic</a>
      <button type="button" class="navbar-toggle" data-toggle="offcanvas" data-target=".sidebar-nav">
        <i class="fa fa-shopping-cart"></i>
      </button>
      <button type="button" class="navbar-toggle" data-toggle="collapse" data-target="#main_bar">
        <i class="fa fa-th-list"></i> Options
      </button>
    </div>
    <div class="collapse navbar-collapse" id="main_bar">
      <ul class='nav navbar-nav'>
        {{#view App.NavView}}
          {{#link-to 'currentOrder'}}Current order{{/link-to}}
        {{/view}}
        {{#view App.NavView}}
          {{#link-to 'products'}}Manage products{{/link-to}}
        {{/view}}
        {{#view App.NavView}}
          {{#link-to 'orders'}}Manage orders{{/link-to}}
        {{/view}}
        <li class='dropdown'>
          <a href='#' class='dropdown-toggle navbar-link' data-toggle="dropdown">
            {{currentCompany.name}}
            <i class='caret'></i>
            </a>
              <ul class='dropdown-menu'>
                {{#view App.NavView}}
                  <a href='#' {{action 'logout'}}>Logout</a></li>
                {{/view}}
             </ul>
        </li>
       </ul>
     </div>
  </nav>
{{/if}}
<div id='container' class='container'>
  {{bs-growl-notifications}}
  {{outlet}}
</div>
