<div class='row'>
	<div class='col-sm-4'>
	  {{input type='search' value=searchQuery class="form-control" placeholder='Filter products' id='filter_products'}}
	</div>
</div>
<div id='order_products'>
  {{#each this.products}}
    {{view App.OrderProductItemView}}
  {{else}}
    <div class='box'>
    	<h3>There are not products</h3>
      {{#unless suggesting}}
        <button {{action 'toggleSuggesting'}} class='btn btn-default'>Suggest a product</button>
      {{/unless}}
    </div>
  {{/each}}
</div>
